<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- ① アプリアイコン -->
        <ImageView
            android:id="@+id/imgAppIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <!-- ② アプリ名 -->
        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgAppIcon"
            app:layout_constraintEnd_toStartOf="@+id/swEnabled"
            app:layout_constraintStart_toEndOf="@+id/imgAppIcon"
            app:layout_constraintTop_toTopOf="@+id/imgAppIcon"
            tools:text="Sample App Name" />

        <!-- ⑦ 有効スイッチ -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ③ 検索タイトル -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSrhTitle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/captionSearchTitle"
            app:layout_constraintEnd_toStartOf="@+id/btnCopyRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgAppIcon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSrhTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ⑤ コピー -->
        <ImageButton
            android:id="@+id/btnCopyRow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/copy"
            app:layout_constraintBottom_toBottomOf="@+id/tilSrhTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tilSrhTitle"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <!-- ④ 音声メッセージ -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilVoiceMsg"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/captionVoiceMsg"
            app:layout_constraintEnd_toStartOf="@+id/btnPlayVoice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilSrhTitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editVoiceMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ⑧ プレイ -->
        <ImageButton
            android:id="@+id/btnPlayVoice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/play"
            app:layout_constraintBottom_toBottomOf="@+id/tilVoiceMsg"
            app:layout_constraintEnd_toStartOf="@+id/btnDeleteRow"
            app:layout_constraintTop_toTopOf="@+id/tilVoiceMsg"
            app:srcCompat="@android:drawable/ic_media_play" />

        <!-- ⑥ 削除 -->
        <ImageButton
            android:id="@+id/btnDeleteRow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_delete"
            app:layout_constraintBottom_toBottomOf="@+id/tilVoiceMsg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tilVoiceMsg"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
